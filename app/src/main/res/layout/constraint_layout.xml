<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:gravity="bottom|right"
        android:text="0"
        android:textAlignment="gravity"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/CE"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C3BFBF"
        android:text="CE"
        android:textColor="#1B1919"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/num7"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#DEDBDB"
        android:text="7"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CE" />

    <Button
        android:id="@+id/num4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#DEDBDB"
        android:text="4"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num7" />

    <Button
        android:id="@+id/num1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#DEDBDB"
        android:text="1"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num4" />

    <Button
        android:id="@+id/plusminus"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#C3BFBF"
        android:text="+/-"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/num1" />

    <Button
        android:id="@+id/num2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#DEDBDB"
        android:text="2"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/num1"
        app:layout_constraintTop_toBottomOf="@id/num5" />

    <Button
        android:id="@+id/num0"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#DEDBDB"
        android:text="0"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/plusminus"
        app:layout_constraintTop_toBottomOf="@id/num2" />

    <Button
        android:id="@+id/num8"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#DEDBDB"
        android:text="8"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/num7"
        app:layout_constraintTop_toBottomOf="@id/C" />

    <Button
        android:id="@+id/num9"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#DEDBDB"
        android:text="9"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/num8"
        app:layout_constraintTop_toBottomOf="@id/BS" />

    <Button
        android:id="@+id/times"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#C3BFBF"
        android:text="x"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/num9"
        app:layout_constraintTop_toBottomOf="@id/divide" />

    <Button
        android:id="@+id/num6"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#DEDBDB"
        android:text="6"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/num5"
        app:layout_constraintTop_toBottomOf="@id/num9" />

    <Button
        android:id="@+id/minus"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#C3BFBF"
        android:text="-"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/num6"
        app:layout_constraintTop_toBottomOf="@id/times" />

    <Button
        android:id="@+id/num3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#DEDBDB"
        android:text="3"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/num2"
        app:layout_constraintTop_toBottomOf="@id/num6" />

    <Button
        android:id="@+id/plus"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#C3BFBF"
        android:text="+"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/num3"
        app:layout_constraintTop_toBottomOf="@id/minus" />

    <Button
        android:id="@+id/dot"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#C3BFBF"
        android:text="."
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/num0"
        app:layout_constraintTop_toBottomOf="@id/num3" />

    <Button
        android:id="@+id/equal"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#C3BFBF"
        android:text="="
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/dot"
        app:layout_constraintTop_toBottomOf="@id/plus" />

    <Button
        android:id="@+id/num5"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#DEDBDB"
        android:text="5"
        android:textColor="#000000"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/num4"
        app:layout_constraintTop_toBottomOf="@id/num8" />

    <Button
        android:id="@+id/C"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C3BFBF"
        android:text="C"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/CE"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/divide"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C3BFBF"
        android:text="/"
        android:textColor="#000000"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/BS"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/BS"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C3BFBF"
        android:text="BS"
        android:textColor="#000000"
        android:textSize="24sp"
        app:cornerRadius="0dip"
        app:layout_constraintStart_toStartOf="@id/C"
        app:layout_constraintTop_toBottomOf="@id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>